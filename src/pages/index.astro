<Layout>
	<main class="flex h-full flex-col items-center justify-center gap-6 sm:gap-8">
		<a
			href="mailto:bartosz.kapciak@gmail.com"
			class="rounded text-2xl font-extralight tracking-wider decoration-from-font underline-offset-2 outline-2 outline-offset-4 outline-secondary hover:underline focus:outline sm:rounded-md sm:text-4xl"
			aria-label="bartosz.kapciak@gmail.com"
